<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/recycler_view_layout"
    android:orientation="horizontal"
    android:background="?selectableItemBackground"

    >

    <ImageView
        android:id="@+id/bluetooth_icon_image_view"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:src="@drawable/baseline_bluetooth_black_18dp"
        android:layout_marginTop="15sp"

        />

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/linear_layout_containing_device"
    >
    <TextView
        android:id="@+id/device_name_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scoreboard 1"
        android:textColor="#4682B4"
        android:textSize="20dp"
        android:padding="10dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Connected"
        android:id="@+id/connected_textview"
        android:layout_marginLeft="10dp"
        android:textColor="#A9A9A9"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#C0C0C0"
        android:layout_marginTop="4dp"
        />

    </LinearLayout>


</LinearLayout>


